							if (contactUsBehance != null)
							{
								<a href="@contactUsBehance.Url" class="fill-btn text-color-979797 js-pointer-small" data-text="Behance">@contactUsBehance.Name</a>
							}
						}

					</li>
					<li class="list__item anim-fade tr-delay-05">

						@{
							var contactUsTwitter = Model.Value<Link>("contactUsTwitter");

							if (contactUsTwitter != null)
							{
								<a href="@contactUsTwitter.Url" class="fill-btn text-color-979797 js-pointer-small" data-text="Twitter">@contactUsTwitter.Name</a>
							}
						}

					</li>

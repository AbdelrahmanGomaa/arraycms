 *@

		<p class='field half'>
			<label class='label' for='select'>Position</label>
			<select class='select' id='select' name="Position">
				<option selected value=''></option>
				<option id="online" value='1'>Online</option>
				<option id="offline" value='2'>Offline</option>
			</select>
		</p>


			<div class='field half required offline'>
				<label class='label'>Offline Appoiment</label>
			<ul class='options' name="OfflinePosition">
					<li class='option'>
					<input class='option-input' id='option-10' name='OfflinePosition' type='radio' value='friday'>
						<label class='option-label' for='option-10'>friday</label>
					</li>
					<li class='option'>
					<input class='option-input' id='option-11' name='OfflinePosition' type='radio' value='Sat & Tue'>
						<label class='option-label' for='option-11'>Sat & Tue</label>
					</li>
					<li class='option'>
					<input class='option-input' id='option-12' name='OfflinePosition' type='radio' value='Sun & Wed'>
						<label class='option-label' for='option-12'>Sun & Wed</label>
					</li>
					<li class='option'>

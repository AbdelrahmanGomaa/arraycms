@model ArrayCMS.Models.BookingFormViewModel

@inject UmbracoHelper umbracoHelper

@*@umbracoHelper.GetDictionaryValue("")*@



@using (Html.BeginUmbracoForm<BookingFormController>(nameof(BookingFormController.SubmitAsync), null, new { @id = "send", @class = "form" }))
{


		<div class="reservation-container">
			<p class='field required'>
				<label class='label required' for='name'>Full name</label>
				<input class='text-input' id='name' asp-for='FullName' required type='text'>
			</p>
			<p class='field required half'>
				<label class='label' for='email'>E-mail</label>
				<input class='text-input' id='email' asp-for='Email' required type='email'>
			</p>
			<p class='field required half'>
				<label class='label' for='phone'>Phone</label>
				<input class='text-input' id='phone' asp-for='PhoneNumber' required type='phone'>
			</p>
			<!-- <p class='field half required error'>
			<label class='label' for='login'>Login</label>
			<input class='text-input' id='login' name='login' required type='text' value='mican'>
			</p> -->
			<!-- <p class='field half required'>
			<label class='label' for='password'>Password</label>
			<input class='text-input' id='password' name='password' required type='password'>
			</p> -->
		<!-- Course -->
		<div class='field required'>
			<label class='label'>Course</label>
			<ul class='options' name="Courses">
				<li class='option'>
					<input class='option-input' id='option-0' name='Courses' type='radio' value='Web Fullstack'>
					<label class='option-label' for='option-0'>Web Fullstack</label>
				</li>
				<li class='option'>
					<input class='option-input' id='option-1' name='Courses' type='radio' value='Flutter'>
					<label class='option-label' for='option-1'>Flutter</label>
				</li>
				<li class='option'>
					<input class='option-input' id='option-2' name='Courses' type='radio' value='Ai'>
					<label class='option-label' for='option-2'>Ai</label>
				</li>
				<li class='option'>
					<input class='option-input' id='option-3' name='Courses' type='radio' value='Cyber Security'>
					<label class='option-label' for='option-3'>Cyber Security</label>
				</li>
			</ul>
